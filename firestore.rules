rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is owner
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check if user is participant in chat
    function isParticipant(participants) {
      return request.auth.uid in participants;
    }
    
    // Users collection
    match /users/{userId} {
      // Allow users to read their own profile and any other user's public profile
      allow read: if isAuthenticated();
      
      // Allow users to create their own profile
      allow create: if isAuthenticated() && isOwner(userId);
      
      // Allow users to update only their own profile
      allow update: if isAuthenticated() && isOwner(userId);
      
      // Don't allow delete
      allow delete: if false;
    }
    
    // Chat Rooms collection
    match /chatRooms/{chatRoomId} {
      // Allow read if user is a participant
      allow read: if isAuthenticated() && 
                     isParticipant(resource.data.participants);
      
      // Allow create for any authenticated user
      allow create: if isAuthenticated() && 
                      isParticipant(request.resource.data.participants);
      
      // Allow update if user is a participant
      allow update: if isAuthenticated() && 
                      isParticipant(resource.data.participants);
      
      // Don't allow delete
      allow delete: if false;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Allow read if user is participant in the chat room
        allow read: if isAuthenticated() && 
                       isParticipant(get(/databases/$(database)/documents/chatRooms/$(chatRoomId)).data.participants);
        
        // Allow create if user is the sender and participant in chat room
        allow create: if isAuthenticated() && 
                         request.resource.data.senderId == request.auth.uid &&
                         isParticipant(get(/databases/$(database)/documents/chatRooms/$(chatRoomId)).data.participants);
        
        // Allow update only for read status by receiver
        allow update: if isAuthenticated() && 
                         request.resource.data.receiverId == request.auth.uid &&
                         isParticipant(get(/databases/$(database)/documents/chatRooms/$(chatRoomId)).data.participants);
        
        // Allow delete only by sender
        allow delete: if isAuthenticated() && 
                         resource.data.senderId == request.auth.uid;
      }
    }
    
    // Calls collection (for call history)
    match /calls/{callId} {
      // Allow read if user is caller or receiver
      allow read: if isAuthenticated() && 
                     (resource.data.callerId == request.auth.uid || 
                      resource.data.receiverId == request.auth.uid);
      
      // Allow create if user is the caller
      allow create: if isAuthenticated() && 
                       request.resource.data.callerId == request.auth.uid;
      
      // Allow update if user is involved in the call
      allow update: if isAuthenticated() && 
                       (resource.data.callerId == request.auth.uid || 
                        resource.data.receiverId == request.auth.uid);
      
      // Allow delete if user is the caller
      allow delete: if isAuthenticated() && 
                       resource.data.callerId == request.auth.uid;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
