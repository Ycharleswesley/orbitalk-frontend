rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to validate image
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Helper function to validate video
    function isVideo() {
      return request.resource.contentType.matches('video/.*');
    }
    
    // Helper function to check video file size (100MB max for videos)
    function isValidVideoSize() {
      return request.resource.size < 100 * 1024 * 1024;
    }
    
    // Helper function to check file size (10MB max for images, 5MB for audio)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    function isValidAudioSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }
    
    // Profile pictures
    match /profile_pictures/{fileName} {
      // Anyone can read profile pictures
      allow read: if true;
      
      // Only authenticated users can upload their own profile picture
      allow write: if isAuthenticated() && 
                      isImage() && 
                      isValidSize() &&
                      fileName.matches('profile_' + request.auth.uid + '.*');
      
      // Allow delete only by owner
      allow delete: if isAuthenticated() && 
                       fileName.matches('profile_' + request.auth.uid + '.*');
    }
    
    // Chat images
    match /chat_images/{chatRoomId}/{fileName} {
      // Only participants can read
      allow read: if isAuthenticated();
      
      // Only authenticated users can upload chat images
      allow write: if isAuthenticated() && 
                      isImage() && 
                      isValidSize();
      
      // Allow delete by uploader (implement additional checks in app)
      allow delete: if isAuthenticated();
    }
    
    // Chat videos
    match /chat_videos/{chatRoomId}/{fileName} {
      // Only participants can read
      allow read: if isAuthenticated();
      
      // Only authenticated users can upload chat videos
      allow write: if isAuthenticated() && 
                      isVideo() && 
                      isValidVideoSize();
      
      // Allow delete by uploader (implement additional checks in app)
      allow delete: if isAuthenticated();
    }
    
    // Voice messages
    match /voice_messages/{chatRoomId}/{fileName} {
      // Only participants can read
      allow read: if isAuthenticated();
      
      // Only authenticated users can upload voice messages
      allow write: if isAuthenticated() && 
                      isAudio() && 
                      isValidAudioSize();
      
      // Allow delete by uploader
      allow delete: if isAuthenticated();
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
